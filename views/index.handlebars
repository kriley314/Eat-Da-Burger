<h1>Burgers!</h1>
<h2>Burgers we haven't eaten yet!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
        <li>
            {{this.burger_name}}

            <form action="/api/burgers/{{this.id}}" method="POST">
                <button type="submit">DEVOUR IT!</button>
            </form>
        </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been DEVOURED!!</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
        <li>
            {{this.burger_name}}
        </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form action="/api/burgers" method="POST">
    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>
